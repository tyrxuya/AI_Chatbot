<UserControl x:Class="AIChatbot.View.UserControls.UserTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIChatbot.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <Border CornerRadius="10" BorderThickness="1" BorderBrush="LightGray">
            <TextBox x:Name="txtInput" VerticalContentAlignment="Center" 
         FontSize="16" FontWeight="Light" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="LightGray" Padding="8" TextChanged="txtInput_TextChanged">
                
            </TextBox>
        </Border>
        <TextBlock x:Name="tbPlaceholder" Text="{Binding Placeholder}" FontSize="16" FontWeight="Light" 
   Foreground="LightGray" VerticalAlignment="Center" Margin="10,0,0,0" Panel.ZIndex="-1"/>
    </Grid>
</UserControl>
