<UserControl x:Class="AIChatbot.View.UserControls.UserChatBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIChatbot.View.UserControls"
             mc:Ignorable="d" 
             FontFamily="Consolas"
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid>
        <Border Margin="0, 10, 0, 10" Background="#353535" CornerRadius="25" Padding="15" HorizontalAlignment="Right">
            <TextBlock x:Name="txtResponse" Text="{Binding BubbleContent}" Foreground="White" HorizontalAlignment="Stretch" MaxWidth="500" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
        </Border>
    </Grid>
</UserControl>
